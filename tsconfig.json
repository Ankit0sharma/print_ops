{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2022",
      "strict": false,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "useDefineForClassFields": false
    },
    "include": ["src/**/*"]
  }
  